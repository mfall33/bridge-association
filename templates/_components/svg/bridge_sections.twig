{% macro bridgeSection(pathData, sectionId, headingContent, headingX, headingY, subTextContent, subTextWidth, subTextX, subTextY, aosDelay, url ) %}
	<a href="{{ url }}">
		<g class="bridge-section-group" data-aos="fade" data-aos-delay="{{ aosDelay }}" data-aos-duration="1000" data-aos-once="true">
			<path d="{{ pathData }}" class="bridge-section fill-[#3854CB] hover:fill-black transition-colors duration-300 cursor-pointer" data-section-id="{{ sectionId }}"></path>

			<text x="{{ headingX }}" y="{{ headingY }}" class="bridge-text bridge-heading text-xl fill-white font-semibold pointer-events-none transition-colors duration-300 poppins-regular" data-section-id="{{ sectionId }}" text-anchor="middle" dominant-baseline="middle">
				{{ headingContent }}
			</text>

			{% if subTextContent is not empty %}
				<foreignObject x="{{ subTextX }}" y="{{ subTextY }}" width="{{ subTextWidth }}" height="100" class="pointer-events-none">
					<div xmlns="http://www.w3.org/1999/xhtml" class="bridge-subtext-container" style="
							                        width: 100%;
							                        height: 100%;
							                        display: flex;
							                        align-items: flex-start;
							                        justify-content: center;
							                        box-sizing: border-box;
							                     ">
						<p class="bridge-subtext-html text-sm text-center font-normal text-white open-sans-regular" data-section-id="{{ sectionId }}">
							{{ subTextContent }}
						</p>
					</div>
				</foreignObject>
			{% endif %}
		</g>
	</a>
{% endmacro %}

