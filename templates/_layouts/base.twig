{%- set fixedRoutes = ['/blog/blog-one', '/another/route'] -%}
{%- set currentPath = craft.app.request.pathInfo|trim('/') -%}
{%- set blogRoutePrefix = 'blog/' -%}
{%- set isBlogEntry = currentPath|slice(0, blogRoutePrefix|length) == blogRoutePrefix -%}
{%- set headerFixed = (not isBlogEntry) and ('/' ~ currentPath) not in fixedRoutes -%}
{%- minify -%}

